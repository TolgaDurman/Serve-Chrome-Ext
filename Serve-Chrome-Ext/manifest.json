{
  "manifest_version": 3,
  "name": "Unity WebGL Launcher",
  "version": "1.0",
  "description": "Launches Unity WebGL builds from local folders",
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "permissions": ["activeTab", "storage", "tabs", "scripting"],
  "action": {
    "default_popup": "app/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "app/player.html",
        "*.loader.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
