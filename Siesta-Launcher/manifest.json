{
  "manifest_version": 3,
  "name": "Siesta Launcher",
  "version": "1.2",
  "description": "Launches Unity WebGL builds on Chrome",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "app/popup.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
